			mui.openWindow({url:"",id:""});
		});
		
		/*跳转活动*/
		mui('.t-s-publish-imgtxt').on('tap', '.t-s-publish-sub2', function() {
			mui.openWindow({url:"",id:""});
		});
		
		var pageindex = 1;
		var ctrls = true;
		var emptyval = true;

		getdatalist();
		$(window).bind('scroll', function() {
			if(($(window).scrollTop() + $(window).height()) >= ($(document).height() - 60)) {
				if(ctrls && emptyval) {
					getdatalist();
				}
			}

		});
		/*数据加载*/
		function getdatalist() {
			var url = "__URL__/ShopRedList?pageindex=" + pageindex;
			var _html = "";
			$.ajax({
				type: 'get',
				dataType: 'json',
				url: url,
				cache: false,
				beforeSend: function() {
					$('#console').css('display', 'block');
					$('#console').html('加载中...');
					ctrls = false;
				},
				error: function() {
					$('#console').css('display', 'block');
					$('#console').html('加载失败');
					ctrls = true;
				},
				success: function(obj) {
					if(pageindex == 1) {
						$('#data_list').empty();
					}
					var mgs = eval(obj);
					if(mgs['code'] == 0) {
						var data = mgs.data;
						if(!data || data.list.length <= 0) {
							if(pageindex == 1) { //数据为空展示
								_html+='<div class="data-empty divtab">';
								_html+='<div class="data-empty-img">';
								_html+='<img src="__IMG__/rednewact/redpacket_icon_guanli_default.png" alt="" />';								
								_html+='</div>';
								_html+='<div class="data-empty-font c3 fs13">暂时没有红包，马上发放吧</div>';
								_html+='</div>'; 							
							}
							emptyval = false;
						} else {
							if(pageindex <= data.pageCount) {
								pageindex++;
								var datalist = data.list;
								for(var i = 0; i < datalist.length; i++) {
									var dataarr = datalist[i];
									_html+='<div class="red-list-item divre red-list-item'+pageindex+'" id="red-item-'+dataarr['c_id']+'" title="'+dataarr['c_id']+'">';
										_html+='<div class="red-con divab">';
											_html+='<div class="redname fs12 cf">'+dataarr['c_name']+'';
												if (dataarr['c_type'] == 2) {
													_html+='<span class="red-type type01 fs11 cf">拼</span>';
												} else {
													_html+='<span class="red-type type02 fs11 cf">普</span>';
												}
												
											_html+='</div>';
											_html+='<div class="red-money-operate divtab">';
												_html+='<div class="red-money fs24 cf fl">￥'+dataarr['c_money']+'</div>';
											_html+='</div>';
										_html+='</div>';
										_html+='<div class="red-time-number divab divtab">';
											_html+='<div class="red-release-time c9 fs11 fl">发放时间：'+dataarr['c_addtime']+'</div>';
											_html+='<div class="red-number c9 fs11 fr">已领取<span>'+dataarr['ydq_num']+'</span>/<span>'+dataarr['c_totalnum']+'</span>个</div>';
										_html+='</div>';

										if (dataarr['c_delete'] == 1) {
											_html+='<div class="red-status status02 divab cf fs11">已撤回</div>';
										} else {
											if (dataarr['c_num'] > 0) {
												_html+='<div class="red-status status01 divab cf fs11">正在疯抢</div>';
											} else {
												_html+='<div class="red-status status02 divab cf fs11">已抢光</div>';
											}
										}

										_html+='<img src="__IMG__/rednewact/redpacket_icon_home.png" alt="" />';
									_html+='</div>';	
								};
							} else {
								emptyval = false;
							}
						}
					} else {
						emptyval = false;
					}
					$('#data_list').append(_html);
				},
				complete: function() {
					styles();
					$('.data-empty-img').width($('.data-empty-img').width());
					$('.data-empty-img').height($('.data-empty-img').width()*0.63);
					$('#console').css('display', 'none');
					ctrls = true;
					if(emptyval) {
						loadclick();
					}
				}
			});
		}
		
		/*红包详情*/
		function loadclick() {
			$('.red-list-item'+pageindex).each(function(index) {
				var rid = $(this).attr('title');
				mui('.mui-content').on('tap', '#red-item-' + rid, function() {
					mui.openWindow({url:"__URL__/reddetail?awid="+rid,id:"detail"})
				});
			});
		}
		
		
	</script>

