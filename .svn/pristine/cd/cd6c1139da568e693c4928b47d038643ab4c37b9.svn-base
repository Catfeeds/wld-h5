		<script type="text/javascript">
            var stattt = "";
            var endttt = "";
            mui('.wrap-page').on('tap', '#starttime', function() {
                if(endttt){
                    var picker = new mui.DtPicker({
                        type: "date",//设置日历初始视图模式
                        beginDate: new Date(1990,00,01),
                        endDate: new Date(endttt)//设置结束日期
                    });
                }else{
                    var picker = new mui.DtPicker({
                        type: "date",
                        beginDate: new Date(1990,00,01),
                        endDate: new Date(2077,00,01)//设置结束日期
                    });
                }
                picker.show(function(rs) {
                    stattt=rs.text;
                    $("#starttime").val(rs.text);
                    $('#legalcardstarttime').val(rs.text);
                    picker.dispose();
                });
            });
            /*结束时间*/
            mui('.wrap-page').on('tap', '#endtime', function() {
                if(stattt){
                    var picker = new mui.DtPicker({
                        type: "date",//设置日历初始视图模式
                        beginDate: new Date(stattt),//设置开始日期
                        endDate: new Date(2050,00,01)//设置结束日期
                    });
                }else{
                    var picker = new mui.DtPicker({
                        type: "date",
                        beginDate: new Date(1950,00,01),
                        endDate: new Date(2050,00,01)//设置结束日期
                    });
                }
                $('.longtime').slideDown();
                picker.show(function(rs) {
                    endttt=rs.text;
                    $("#endtime").val(rs.text);
                    $('#legalcardendtime').val(rs.text);
                    picker.dispose();
                    $('.longtime').slideUp();
                });
            });
            /*证照失效时间:长期有效*/
            $('.wrap-page').on('tap','.longtime',function () {
                $(this).slideUp();
                $('#legalcardendtime').val("长期");
                $('#endtime').val("长期");
                $('.mui-dtpicker').removeClass('mui-active');
                $('.mui-backdrop').hide();
            });
		</script>
		<script type="text/javascript">
			var isfixed = '<?php echo $isfixed ?>'; /*0线上，1线下*/
			window.onload = function() {

				//$('.resource-list').css('line-height', $('.resource-list').height() + 'px');

			}
			/*身份证验证*/
			function checkIdcard(idcard) {
				var idreg = /^[0-9a-zA-Z]*$/g;
				if(!idreg.test($('input[name="idcardinfo"]').val())) {
					return false;
				}
				return true;
			}

			/*上一步*/
			function PreviousCK() {
				window.location.href = "__URL__/info_4?isfixed="+isfixed;
			}
			var resign = true;

			function savestep() {
				if(resign) {
					if(emptyval($('input[name="legalperson"]').val())) {
						JqueryDialog.Show('请输入法人姓名');
						$('input[name="legalperson"]').focus();
						return false;
					}
					if(emptyval($('input[name="legalsex"]:checked').val())) {
						JqueryDialog.Show('请选择法人性别');
						$('input[name="legalsex"]').focus();
						return false;
					}
                    if(emptyval($('input[name="idcardinfo"]').val())) {
                        JqueryDialog.Show('请输入证件号码');
                        $('input[name="idcardinfo"]').focus();
                        return false;
                    } else {
                        if(!checkIdcard($('input[name="idcardinfo"]').val())) {
                            JqueryDialog.Show('请输入正确的证件号码！');
                            $('input[name="idcardinfo"]').focus();
                            return false;
                        }
                    }
                    if($("#idcardtype").find("option:selected").val() == '请选择') {
                        JqueryDialog.Show('请选择证件类型');
                        $('#idcardtype').focus();
                        return false;
                    }
                    if(emptyval($('#legalcardstarttime').val())){
                        JqueryDialog.Show('请选择生效时间');
                        $('input[name="starttime"]').focus();
                        return false;
					}
                    if(emptyval($('#legalcardendtime').val())){
                        JqueryDialog.Show('请选择失效时间');
                        $('input[name="endtime"]').focus();
                        return false;
                    }
                    var arr = $('#starttime').val().split("-");
                    var starttime = new Date(arr[0], arr[1], arr[2]);
                    var starttimes = starttime.getTime();
                    var arrs = $('#endtime').val().split("-");
                    var lktime = new Date(arrs[0], arrs[1], arrs[2]);
                    var lktimes = lktime.getTime();
                    if (starttimes >= lktimes) {
                        mui.toast('生效时间大于等于失效时间，请检查');
                        return false;
                    }
                    if(emptyval($('#legal_phone').val())){
                        JqueryDialog.Show('请输入法人电话');
                        $('input[name="legal_phone"]').focus();
                        return false;
                    }
                    resign = false;
					searchByStationName();
				}
			}
			/*根据地址获取经纬度*/
			function searchByStationName() {
                $('#legalcardstarttime').val($('#starttime').val());
                $('#legalcardendtime').val($('#endtime').val());
                $('#legalphone').val($('#legal_phone').val());
				var attrbul = getFormAttrs('form1');
				$.ajax({
					type: "POST",
					url: '__URL__/SetInfo5',
					data: "attrbul=" + JSON.stringify(attrbul),
					dataType: "json",
					success: function(json) {
						var msg = eval(json);
						if(msg.code == 0) {
							JqueryDialog.Show("保存成功！");
							setTimeout(function() {
								window.location.href = "__URL__/info_6?isfixed=<?php echo $isfixed; ?>";
							}, 1000);
						} else {
							JqueryDialog.Show(msg.msg);
							resign = true;
						}
					}
				});
			}

		</script>
