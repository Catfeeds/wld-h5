<title>第三方推荐关系</title>
</head>
<body>
    <!-- 导航部分 -->
    <nav class="breadcrumb">
        <i class="Hui-iconfont">&#xe67f;</i> 首页
        <span class="c-gray en">&gt;</span> 会员管理
        <span class="c-gray en">&gt;</span> 第三方推荐关系
        <a class="btn btn-success radius r mr-20" style="line-height:1.6em;margin-top:3px" href="javascript:location.replace(location.href);" title="刷新" ><i class="Hui-iconfont">&#xe68f;</i></a>
    </nav>
<div class="pd-20 text-c">
    <!-- 搜索部分 -->
	<form action="" method="get">
		<div class="text-c">
		    条件搜索
			<input type="text" class="input-text" style="width:150px" placeholder="推荐人帐号" name="c_phone" value="{$post['c_phone']}">
			<input type="text" class="input-text" style="width:150px" placeholder="推荐人昵称" name="c_nickname" value="{$post['c_nickname']}">
			<input type="text" class="input-text" style="width:200px" placeholder="用户授权标识" name="c_openid" value="{$post['c_openid']}">
			<input type="text" class="input-text" style="width:150px" placeholder="输入统一标识" name="c_unionid" value="{$post['c_unionid']}">
			<span class="select-box inline">
				<select name="c_type" class="select">
					<option value="">绑定类型</option>
		     		<option value="1" <if condition="$post['c_type'] eq 1">selected="selected"</if>>微信</option>
		     		<option value="2" <if condition="$post['c_type'] eq 2">selected="selected"</if>>支付宝</option>
				</select>
		    </span>

		    <span class="select-box inline">
				<select name="c_lock" class="select">
					<option value="">是否被小蜜锁定</option>
		     		<option value="1" <if condition="$post['c_lock'] eq 1">selected="selected"</if>>已被锁定</option>
		     		<option value="2" <if condition="$post['c_lock'] eq 2">selected="selected"</if>>未被锁定</option>
				</select>
		    </span>
			
			<!-- <input type="text" class="input-text" style="width:150px" placeholder="工作状态" name="c_work" value="{$post['c_work']}"> -->
			<input type="hidden" name="ucode"  value="{$ucode}">
			<button type="submit" class="btn btn-success radius" id="" name=""><i class="Hui-iconfont">&#xe665;</i> 搜索</button>
		</div>	
	</form>
	
		
	<!-- 批量删除与记录条数 -->
	<div class="cl pd-5 bg-1 bk-gray mt-20"> 
			<!-- <span class="l">
				<a class="btn btn-primary radius" onclick="system_category_add('第三方推荐关系管理','type_add')" href="javascript:;"><i class="Hui-iconfont">&#xe600;</i> 第三方推荐关系管理</a>
			</span>  -->
			<span class="r">共有数据：<strong>{$count}</strong> 条</span> 
	</div>
	
	<!-- 数据列表 -->
	<div class="mt-20">
		<table class="table table-border table-bordered table-bg table-hover table-sort">
			<thead>
				<tr class="text-c">
					<th width="25"><input type="checkbox" name="" value=""></th>
					<th width="25">ID</th>
					<th width="80">第三方用户标识名</th>
					<th width="80">用户微信授权标识</th>
					<th width="80">推荐人名称</th>
					<th width="80">绑定类型</th>
					<th width="80">统一标识</th>
					<th width="80">状态</th>
					<th width="80">添加时间</th>
				</tr>
			</thead>
			<tbody>
				<volist name="list" id="vo">
				    <tr class="text-c">
				        <td>
				            <input type="checkbox" name="bankid" value="{$vo.c_id}">
				        </td>
				        <td>{$i}</td>
						<td>
						 	<if condition="$vo['c_type'] eq 1"><font style="color: green">微信用户{$vo['c_id']}</font>
						    <elseif condition="$vo['c_type'] eq 2"/><font style="color: blue">支付宝用户{$vo['c_id']}</font>
							</if>
						</td>
						<td>{$vo['c_openid']}</td>
						<td>
							<a title="商家详情" href="__HHOME__/Member/member_list?ucode={$vo.c_pcode}" style="text-decoration:none">{$vo['c_nickname']}
							</a>
						</td>
						<td>
						    <if condition="$vo['c_type'] eq 1"><font style="color: green">微信</font>
						    <elseif condition="$vo['c_type'] eq 2"/><font style="color: blue">支付宝</font>
							</if>
						</td>
						<td>{$vo['c_unionid']}</td>
						<td>
						    <if condition="$vo['c_lock'] eq 1"><font style="color: green">被小蜜锁定</font>
						    <elseif condition="$vo['c_lock'] eq 2"/><font style="color: red">没被小蜜锁定</font>
						    </if>
						</td>
						<td>{$vo['c_addtime']}</td>
					</tr>
				</volist>				
			</tbody>
		</table>
	</div>
</div>

<!-- 分页 -->
<div class="pages">{$page}</div>		
