.show-prize {
    top: 40%;
    left: 50%;
    transform: translate(-50%,-50%);
    z-index: 1000;
    display: none;
}
.show-prize-content {
    background: url("../../img/extgoods/tc_bg.gif") center center no-repeat;
    background-size: 100% 100%;
}

.show-rule {
    width: 70%;
    background-color: #fff;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    z-index: 1000;
    display: none;
    border-radius: 5%;
    padding: 4%;
}
.show-rule h3 {
    text-align: center;
}
.show-rule .extgoods-actrule-introduction {
    font-size: 0.9rem;
}
.show-rule .extgoods-actrule-introduction p {
    padding: 1rem 1.2rem 0 1.5rem;
}
.show-rule .extgoods-actrule-introduction p em {
    background: url("./../../img/extgoods/tc_jb.png") center center no-repeat;
    left: 0;
    top: 0;
}
    

