@charset "utf-8";
/* CSS Document */
/* img{width: 100%;height: 100%;} */

* {
    -webkit-backface-visibility: hidden;
}

.extgoods-main{
    background: url("../../img/extgoods/jh_bg.png") no-repeat;
    background-size: 100% 100%;
    padding: 10%;
}

.extgoods-actdetails .extgoods-actimage {
    padding: 0 10%;
}


.extgoods-actdetails .extgoods-actrule {
    text-align: right;
    right: 0;
    bottom: 10%;
}

.extgoods-actdetails .extgoods-actrule img {
    width: 50%;
    height: 50%;
}
.extgoods-prizes li {
    width: 46%;
    margin: 1%;
    text-align: center;
}

.extgoods-prizes li img {
    height: 100%;
}

.extgoods-prizes li img:last-child {
    display: none;
    width: 0;
}
