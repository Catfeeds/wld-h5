		<script type="text/javascript">
			var akclick = 1;			
			window.onload = function() {
				var provincecode = "<?php echo $provincecode ?>";
				//styles();				
				getCirclelist(provincecode,'');
			}
			$(document).ready(function() {
				$('.change-t-prov-bg').click(function() {
					$('.change-t-prov-bg').fadeOut();
					$('.change-t-prov-main').fadeOut();
					$('.change-ttit-arrow img').attr('src', '__IMG__/district_icon_open2x.png');
