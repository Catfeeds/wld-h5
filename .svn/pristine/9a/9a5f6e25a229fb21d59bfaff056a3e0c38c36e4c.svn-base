			//			$('#c-t-pub--tt').addClass('menu-fixed');
			//		}
			//		if ($(window).scrollTop()< zonghg) {
			//			$('#c-t-pub--tt').removeClass('menu-fixed');
			//		}
			//	});	
			/*样式*/
			function styles() {

				var limgw = $('.change-tli-img').width();
				$('.change-tli-img').height(limgw);

				var lew = $('.change-tli-level').width(),
					leh = lew * 0.48;
				$('.change-tli-level').height(leh);
				$('.change-tli-level').css('line-height', leh + 'px');
			}

			var ctrls = true;
			var emptyval = true;
			/*商圈列表*/
			function getCirclelist(provincecode,circlename) {
				$('#circlelist').empty();
				var _html = "";
				$.ajax({
					type: 'get',
					dataType: 'json',
					url: '__URL__/Getcirclelist?provincecode='+provincecode,
					cache: false,
					beforeSend: function() {
						$('#console').css('display', 'block');
						$('#console').html('加载中...');
						ctrls = false;
					},
					error: function() {
						$('#console').css('display', 'block');
						$('#console').html('加载失败');
						ctrls = true;
					},
					success: function(obj) {						
						var msg = eval(obj);
						if(msg['code'] == 0) {
							var data = msg.data;
							if(data == null) {
								_html += '<div class="baoqian">没有找到相关信息</div>';
								emptyval = false;
							} else {
								for(var i = 0; i < data.length; i++) {
									_html += '<div class="change-trade-tit divtab bborder">';
									if(i==0){
									_html += '<div class="change-ttit-ico fl" style="margin-left: 33%;"><img src="__IMG__/district_icon_yellow_left2x.png" alt="" /></div>';									
									}else{
									_html += '<div class="change-ttit-ico fl" style="margin-left: 33%;"><img src="__IMG__/district_icon_blue_left2x.png" alt="" /></div>';
									}									
									_html += '<div class="change-ttit-font fl c3 fs14" id="ciclename-'+i+
									'">';
									if(i==1){										
										if(circlename!=""){
											_html += ''+circlename+'';
										}else{
											_html += ''+data[i]['title']+'';	
										}
									}else{
										_html += ''+data[i]['title']+'';
									}
									
									_html += '</div>';								
									
									if(i==1){
									_html += '<div class="change-ttit-ico fl"><img src="__IMG__/district_icon_blue_right2x.png" alt="" /></div>';										
									_html += '<div class="change-ttit-cut fr" id="change-ttit-1">';
									_html += '<span class="c9 fs13 fl">切换省份</span>';
									_html += '<div class="change-ttit-arrow fl"><img src="__IMG__/district_icon_open2x.png" alt="" /></div>';
									_html += '</div>';										
									}else{
									_html += '<div class="change-ttit-ico fl"><img src="__IMG__/district_icon_yellow_right2x.png" alt="" /></div>';	
									}
									_html += '</div>';
									_html += '<div class="change-trade-list bgcolor divtab">';
									_html += '<ul id="hot-trade-list">';
									var datalist = data[i].list;
									for(var jk = 0; jk < datalist.length; jk++) {
										_html += '<li>';
										_html += '<div class="change-tli-btn fr">';
										_html += '<div class="change-btn fs13" onclick="entercicle(\''+datalist[jk]["c_provincecode"]+'\',\''+datalist[jk]["c_citycode"]+'\')">切换</div>';
										_html += '</div>';
										_html += '<div class="change-tli-img fl"><img src="'+datalist[jk]['c_img']+'" alt="" /></div>';
										_html += '<div class="change-tli-info fl">';
										_html += '<div class="change-tliname divtab">';
										_html += '<div class="change-tli-name c3 fs13 fl fov">';
										_html +=''+datalist[jk]['c_name']+'';
										_html += '</div>';
										_html += '<div class="change-tli-level fl divre"><img src="'+datalist[jk]['c_levelimg']+'" alt="" /></div>';
										if(i==0){
											_html += '<div class="change-tli-hotico fl"><img src="__IMG__/district_icon_hot2x.png" alt="" /></div>';	
										}
										_html += '</div>';
										_html += '<div class="change-tnuminfo divtab c9 fs12">信息<span>'+datalist[jk]['c_resourcenum']+'</span>人气<span>'+datalist[jk]['c_moods']+'</span></div>';
										_html += '</div>';
										_html += '</li>';
									}
									_html += '</ul>';
									_html += '</div>';
								}
							}
						} else {
							emptyval = false;
						}
						$('#circlelist').append(_html);
						$('.change-t-prov-bg').fadeOut();
						$('.change-t-prov-main').fadeOut();
						akclick = 1;
					},
					complete: function() {
						styles();
						$('#console').css('display', 'none');
						ctrls = true;
						mui('.change-trade-tit').on('tap', '#change-ttit-1', function() {
							$('.change-t-prov-bg').fadeIn();
							$('.change-t-prov-main').fadeIn();
							$(".change-t-prov-bg").height($(document).height());
							$('.change-ttit-arrow img').attr('src', '__IMG__/district_icon_stop2x.png');
							mui('.change-trade-tit').on('tap','#change-ttit-2',function(){
								$('.change-t-prov-bg').fadeOut();
								$('.change-t-prov-main').fadeOut();
								$('.change-ttit-arrow img').attr('src', '__IMG__/district_icon_open2x.png');									
							});
						});						
					}
				});
			}
			/*切换商圈*/
			function entercicle(provcode,ccode) {
				mui.openWindow({url:'__URL__/index?provincecode='+provcode+'&citycode='+ccode,id:'circleindex'});
			}
			
		</script>

