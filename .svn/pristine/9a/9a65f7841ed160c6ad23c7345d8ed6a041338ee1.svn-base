@charset "utf-8";
/* CSS Document */
img{width: 100%;height: 100%;}

.mgoods-item{background: #fff; width: 100%; overflow: hidden; padding: 3% 0 0 3%; margin-bottom: 2%;}
.mgoods-img{ width: 28%; margin-right:2%;}
.hot-con{width: 100%; top: 0; z-index: 88; text-align: center; color: #fff; padding: 2% 0;}
.hot-bg01{ background: rgba(245,105,106,0.8);}
.hot-bg02{ background: rgba(60,209,153,0.8);}
.mgoods-info{ width: 60%;}
.pro-price{ color: #fea93c;}
.sale-stock span{ width: 50%;}
.sale-stock span font{ padding-left: 2%;}
.pro-time font{ padding-left: 2%;}
.mgoods-next{ width: 5%;}
.mgoods-item-middle{ width: 100%; overflow: hidden; border-bottom: 1px solid #e2e2e2; padding: 3% 0;}
.buyer-img{ width: 10%; float: left; overflow: hidden; border-radius: 50%; margin-right: 1%;}
.mgoods-item-bottom ul li{ float: left; width: 25%; text-align: center; padding: 2% 0;}
.menu-img{ width: 28%; display: inline-block;}
.buyer-num{ margin-left: 3%;}
.mgoods-item-bottom ul li span{ display:inline-block;}
