<script type="text/javascript">
function derive(){
   var east=$("#least").val();	
   var maxi=$("#maximum").val();
	if(east == '' || maxi == ''){
		alert('起始页或终止页不能为空');
	}else{
		$("#transmit").attr('action','__URL__/educeIndex');
		$("#transmit").submit();
	}
}
function refer(){
	$("#transmit").attr('action','__URL__/retroact');
	$("#transmit").submit();
}
</script>
<title>信息反馈</title>
</head>
<body>
<nav class="breadcrumb">
	    <i class="Hui-iconfont">&#xe67f;</i> 首页
	    <span class="c-gray en">&gt;</span> 信息管理
	    <span class="c-gray en">&gt;</span> 信息反馈
	    <a class="btn btn-success radius r mr-20" style="line-height:1.6em;margin-top:3px" 
	        href="javascript:location.replace(location.href);" title="刷新" >
	        <i class="Hui-iconfont">&#xe68f;</i>
	    </a>
</nav>
<div class="pd-20">
	<form action="" method="get" id="transmit">
	<div class="text-c">
		<!-- <a href="__URL__/add_replylist" class="btn" style="margin-right: 60px">添加回复权限</a> -->
		条件搜索：
		<!-- <input type="text" class="input-text" style="width:150px" placeholder="输入会员注册手机" name="c_phone" value="{$post['c_phone']}"> -->
		<input type="text" class="input-text" style="width:150px" placeholder="请输入用户昵称" name="c_nickname" value="{$post['c_nickname']}">
		<input type="text" class="input-text" style="width:150px" placeholder="输入用户手机号" name="c_phone" value="{$post['c_phone']}">
		<input type="text" class="input-text" style="width:150px" placeholder="问题关键字" name="c_keyword" value="{$post['c_keyword']}">
		<!-- <span class="btn">全部</span> -->
	
		<input type="text" id="EntTime1" name="EntTime1" value="{$post.EntTime1}" placeholder="回复起始时间" onClick="laydate({istime: true, format: 'YYYY-MM-DD hh:mm:ss'})" class="laydate-icon"/>
		-
		<input type="text" id="EntTime2" name="EntTime2" value="{$post.EntTime2}" placeholder="回复结束时间" onClick="laydate({istime: true, format: 'YYYY-MM-DD hh:mm:ss'})" class="laydate-icon"/>&nbsp;

		<button type="submit" class="btn btn-success radius" onclick="refer()"><i class="Hui-iconfont">&#xe665;</i>搜索</button>

		<div class="cl pd-5 bg-1 bk-gray mt-20"> 
			
			<!-- <span class="l">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<font color="red">待处理提现金额：￥{$sum_money}</font></span> --> 
			<span class="r">反馈总计<strong>{$count}</strong> 条</span>
			<span class="r">已回复<strong>{$h_cound}</strong> 条</span> 
			<span class="r">未回复<strong>{$w_cound}</strong> 条</span>
		</div>
	</div>
	<div class="cl pd-5 bg-1 bk-gray mt-20"> <span class="l"><a href="__URL__/add_replylist" class="btn btn-danger radius">添加回复权限</a></div>
	</form>
	<!-- <div class="cl pd-5 bg-1 bk-gray mt-20"> <span class="l" ></span> <span class="r">共有数据：<strong>{$count}</strong> 条</span> </div> -->
	<div class="mt-20">
	<table class="table table-border table-bordered table-hover table-bg table-sort">
		<thead>
			<tr class="text-c">
				<th width="25"><input type="checkbox" name="" value=""></th>
				<th width="25">ID</th>
				<th width="60">用户昵称</th>
				<th width="120">手机号码</th>
				<th width="60">问题描述</th>
				<th width="80">图片</th>
				<th width="80">反馈时间</th>
				<th width="80">回复状态</th>
				<th width="80">回复条数</th>
				<!-- <th width="80">回复时间</th> -->
				<th width="80">回复</th>
				<th width="80">查看回复</th>
			</tr>
		</thead>
		<tbody>
			<volist name="list" id="vo">
			<tr class="text-c">
				<td><input type="checkbox" value="" name=""></td>
				<td>{$i}</td>
				<td>{$vo['c_nickname']}</td>
				<!-- <td>{$vo['c_tip_id']}</td> -->
				<td>{$vo['c_phone']}</td>
				<td>{$vo['c_content']}</td>
				<td><if condition="$vo['c_img1'] neq ''" ><a href="{$root_url}{$vo['c_img1']}" target="_blank"><img src="{$root_url}{$vo['c_img1']}" style="width:80px;"/></a><else/><img src="__HIMG__/no_picture.gif" style="width:80px;"/></if></td>
				<td>{$vo['c_addtime']}</td>

				<td>{$vo['mystate']}</td>
				<td>{$vo['c_flag']}</td>
				<!-- <td>{$vo['return_time']}</td> -->
				<td><a onclick="system_category_edit('回复','News/return_edit?Id={$vo.c_id}')" style="text-decoration:none">回复</a></td>
				<td><a onclick="system_category_edit('回复内容','News/retmessage?Id={$vo.c_id}')" style="text-decoration:none">查看回复</a></td>
				<!-- <td><a href="__URL__/return_edit?Id={$vo.c_id}">回复</a></td>
				<td><a href="__URL__/retmessage?Id={$vo.c_id}">查看回复</a></td> -->
			</tr>
			</volist>
		</tbody>
	</table>
	</div>
</div>
