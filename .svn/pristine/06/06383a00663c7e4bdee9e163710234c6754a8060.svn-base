/* CSS Document */
img{width: 100%;height: 100%;}


/* 公用   */
.ca-work-con{text-align: center; padding: 5% 0 10% 0;}
.ca-work-img{width: 30%;margin: 2% auto;}


/* 上班   */
.ca-start-work{ top: 35%; width: 50%; left: 24%;}
.ca-store-info{ text-align: center;padding: 8% 0;}
.ca-store-img{ width: 10%;margin: 2% auto;}

.ca-number_con{ background: #f5f6fb; padding: 0 0 3% 0; margin-top: 8%;}
.ca-tit{ text-align: center; border-top:1px solid #d4d5d7; padding: 2.5% 0;}
.ca-tit div{ width:18%;}
.ca-tit p{ width: 64%; color: #c8c8c8;}
.ca-number_con ul li{ color:#949398; border-top:1px solid #d4d5d7; text-align: center; padding: 4% 0;}
.ca-number_con ul li:nth-of-type(1){ padding-top:7%;}

/* 下班   */
.ca-off-work{ top: 22%; width: 50%; left: 24%;}
.ca-ways-info{border-top:1px solid #f5f5f5;}
.ca-ways-info ul { padding-left: 3%;}
.ca-ways-info ul li{ width: 100%; overflow: hidden; border-bottom:1px solid #f5f5f5; padding: 2% 2% 2% 0;}
.ca-num-img{ width: 15%; margin-right: 2%;}
.ca-num-info{ width: 40%;}
.ca-num-price{ width: 23%}
.ca-num-remark{ width: 20%;}
.ca-remark-img{width: 25%;}
.ca-remark_con{padding: 3% 4%; border-top:1px solid #f5f5f5;position: fixed; width: 100%; bottom: 0;}
.ca-remark-info{ background: #f4f4f4; max-height: 75px; width: 100%; padding: 3% 3%; border-radius: 6px; border-radius: 6px; overflow: auto;}
.ca-remark-opearte{ text-align: center; padding-top: 4%;}
.ca-remark-opearte div{ width:18%;}
.ca-remark-opearte div:nth-of-type(1){ text-align: left;}
.ca-remark-opearte div:nth-of-type(2){ text-align: right;}
.ca-remark-opearte p{ width: 64%; color: #c8c8c8;}

/* 我的   */
.ca-record-info{}
.ca-record-info ul{ padding-left: 3%; margin-bottom: 3%;}
.ca-record-info ul li{ width: 100%; overflow: hidden; border-bottom: 1px solid #f5f5f5; padding: 3% 3% 3% 0;}
.ca-record-tit{ width: 94%;}
.ca-record-img{ width: 6%;}

.ca-myinfo-con ul{ padding-left: 3%; margin-bottom: 3%;}
.ca-myinfo-con ul li{width: 100%; overflow: hidden; border-bottom: 1px solid #f5f5f5; padding: 3% 3% 3% 0;}
.ca-myinfo-tit{width: 22%;}
.ca-myinfo-img{width: 6%; margin-right: 1%;}
.ca-myinfo-time{ width: 70%;}
.ca-myinfo-time font{ padding-left:5%; }

.ca-gathering-tit{ }
.ca-gathering-tit ul { padding-left: 3%;}
.ca-gathering-tit ul li{ padding: 4% 4% 4% 0; border-bottom: 1px solid #f5f5f5;}

.ca-work-record{ padding-left: 3%;}
.ca-work-record ul li{ border-bottom:1px solid #f5f5f5; padding-bottom:3%; padding: 0 3% 3% 0;}
.ca-work-tit{ padding: 2% 3% 4% 0;}
.ca-work-time{ padding-top: 3%;}




/*是否同意邀请成为收银员*/
.cashier-card{margin: 5% auto;width: 100%;}
.addstaff-info{ width: 80%; padding: 4% 0; margin: 0 auto; border-radius: 5px;
   -webkit-box-shadow:0 0 10px rgba(0, 0, 0, .2);  
  -moz-box-shadow:0 0 10px rgba(0, 0, 0, .2);  
  box-shadow:0 0 10px rgba(0, 0, 0, .2); padding: 3% 0;}
.addstaff-verify {top: 15.5%; font-size: 8px; text-align: center; width: 100%; color: red;}
.addstaff-img{ width: 45%; margin: 1% auto 2% auto; overflow: hidden;}
.addstaff-info span{ display: block; width: 60%; margin: 0 auto;}
.addstaff-info p{padding: 1% 4%;}
#nickname{text-align: center;}
#signinfo{padding: 3% 0 5% 4%;margin-bottom: 3%;}

.cashier-agree-btn{width: 65%;margin: 12% auto;text-align: center;padding: 3% 0;background: #45AAFA;border-radius: 25px;}











