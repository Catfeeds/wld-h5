<title>加盟店列表</title>
</head>
<body>
<nav class="breadcrumb"><i class="Hui-iconfont">&#xe67f;</i> 首页 <span class="c-gray en">&gt;</span> 商家中心 <span class="c-gray en">&gt;</span>加盟店管理<a class="btn btn-success radius r mr-20" style="line-height:1.6em;margin-top:3px" href="javascript:location.replace(location.href);" title="刷新" ><i class="Hui-iconfont">&#xe68f;</i></a></nav>
<div class="pd-20">
	<form action="league_list" method="get">
	<div class="text-c">
		条件搜索：
		<input type="text" class="input-text" style="width:200px" placeholder="输入商家昵称" name="nickname" value="{$post['nickname']}">
		<input type="text" class="input-text" style="width:200px" placeholder="输入加盟店统一名称" name="name" value="{$post['name']}">

		<span class="select-box inline">
		<select name="status" class="select">
			<option value="">选择激活状态</option>
		  	<option value="1" <if condition="$post.status eq 1">selected="selected"</if>>已激活</option>
		  	<option value="2" <if condition="$post.status eq 2">selected="selected"</if>>未激活</option>
		</select></span>

		<button type="submit" class="btn btn-success radius" id="" name=""><i class="Hui-iconfont">&#xe665;</i> 搜索 </button>
	</div>
	</form>
<div class="pd-20 text-c">	
	<div class="cl pd-5 bg-1 bk-gray mt-20"> <span class="l"><a class="btn btn-primary radius" onclick="league_add('添加加盟总店','Federation/league_add',800)" href="javascript:;"><i class="Hui-iconfont">&#xe600;</i>添加加盟总店</a></span> <span class="r">共有数据：<strong>{$count}</strong> 条</span> </div>
	<div class="mt-20">
		<table class="table table-border table-bordered table-hover table-bg table-sort">
			<thead>
				<tr class="text-c">
					<th width="15"><input type="checkbox" name="" value=""></th>
					<th width="28">ID</th>
					<th width="100">商家昵称</th>
					<th width="80">商家头像</th>
					<th width="60">加盟店编号</th>
					<th width="100">加盟统一名称</th>					
					<th width="60">加盟行业</th>
					<th width="60">激活状态</th>
					<th width="60">子店数量</th>
					<th width="60">剩余数量</th>
					<th width="120">添加时间</th>
					<th width="60">操作</th>
				</tr>
			</thead>
			<tbody>
				<volist name="list" id="vo">
				<tr class="text-c">
					<td><input type="checkbox" name="leagueid" value="{$vo.c_id}"></td>
					<td>{$i}</td>															
					<td><a title="详细信息" href="__HHOME__/Member/member_list?ucode={$vo.c_ucode}" style="text-decoration:none">{$vo['c_nickname']}</a></td>
					<td>
		         		<if condition="$vo['c_headimg'] neq ''" ><a href="{$root_url}{$vo['c_headimg']}" target="_blank"><img src="{$root_url}{$vo['c_headimg']}" style="width:60px;"/></a><else/><img src="__HIMG__/no_picture.gif" style="width:60px;"/></if>
		         	</td>
					<td>{$vo.c_shopcode}</td>
					<td>{$vo['c_name']}</td>
		         	<td>{$vo.c_category_name}</td>
		         	<td>
		         		<if condition="$vo['c_status'] eq 1" >
		         			<font color="green">已激活</font>
		         		<else/>
		         			<font color="red">未激活</font>
		         		</if>
		         	</td>
		         	<td>{$vo['c_num']}</td>
		         	<td>{$vo.c_remain_num}</td>
					<td>{$vo.c_addtime}</td>
					<td class="td-manage">
						<a title="分店列表" href="__HHOME__/Federation/subbranch?pid={$vo.c_id}&type=2" style="text-decoration:none"><i class="Hui-iconfont">&#xe6bf;</i></a>
						 <a title="编辑" href="javascript:;" onclick="league_edit('编辑','Federation/league_edit?Id={$vo['c_id']}','4','','760')" class="ml-5" style="text-decoration:none"><i class="Hui-iconfont">&#xe6df;</i></a> 
					</td>
				</tr>
				</volist>				
			</tbody>
		</table>
	</div>	
</div>
<div class="pages">{$page}</div>		

<script type="text/javascript" src="__HLIB__/jquery/1.9.1/jquery.min.js"></script> 
<script type="text/javascript" src="__HLIB__/layer/1.9.3/layer.js"></script>
<script type="text/javascript" src="__HLIB__/laypage/1.2/laypage.js"></script> 
<script type="text/javascript" src="__HLIB__/My97DatePicker/WdatePicker.js"></script> 
<script type="text/javascript" src="__HLIB__/datatables/1.10.0/jquery.dataTables.min.js"></script> 
<script type="text/javascript" src="__HJS__/H-ui.js"></script> 
<script type="text/javascript" src="__HJS__/H-ui.admin.js"></script> 
<script type="text/javascript">
$('.table-sort').dataTable({
	"aaSorting": [[ 1, "asc" ]],//默认第几个排序
	"bStateSave": false,//状态保存
	"aoColumnDefs": [
	  //{"bVisible": false, "aTargets": [ 3 ]} //控制列的隐藏显示
	  {"orderable":false,"aTargets":[0,4]}// 制定列不参与排序
	]
});

/*系统-栏目-添加*/
function league_add(title,url,w,h){
	layer_show(title,url,w,h);
}
/*系统-栏目-编辑*/
function league_edit(title,url,id,w,h){
	layer_show(title,url,w,h);
}
</script>
</body>
</html>