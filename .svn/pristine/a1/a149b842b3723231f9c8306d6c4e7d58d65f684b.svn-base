/*商家-编辑*/
function shop_info(title,url,id,w,h){
	var index = layer.open({
		type: 2,
		title: title,
		content: HHOME+'/'+url
	});
	layer.full(index);
}
/*店铺信息*/
function store_info(title,url,w,h){	
	var index = layer.open({
		type: 2,
		title: title,
		content: HHOME+'/'+url
	});
	layer.full(index);
}
/*驳回商家资料*/
function shop_reject(ucode){
	layer.confirm('您确定改变商家审核状态，使商家重新填写资料？',function(index){
		//此处请求后台程序，下方是成功后的前台处理……	
		$.post(HHOME+'/Merchant/shop_reject',{ucode:ucode}, function(obj) {
			var result = eval(obj);		
	        if (result['code'] != 0) {
	        	layer.msg(result['msg'],{icon:10,time:2000});        	      	
	        } else {
	        	layer.msg(result['msg'],{icon:1,time:2000});
	        	window.location.reload(); 
	        }        
	    });		
	});
}
//
function changea(ucode,obj){
   	var remark = $(obj).val(); 
    if(remark!=''){
        if(confirm("你确定执行该操作吗？")){
            $.post('__URL__/save_remark',{ucode:ucode,remark:remark},function(data){
                var result = eval(data);		
    	        if (result['code'] != 0) {
    	        	layer.msg(result['msg'],{icon:10,time:2000});
    	        	setTimeout(function () {
		        		window.location.reload();
		        	},2000);
    	        } else {
    	        	layer.msg(result['msg'],{icon:1,time:2000});
    	        	setTimeout(function () {
		        		window.location.reload();
		        	},2000); 
    	        }          
            });
        }
    }
    return false;
}
/*商家资料审核申请操作*/
function ajax_handle(checked,ucode){

	if(checked == 3){
		var message = '确定要通过资料审核吗？';
	}else if(checked == 1){
		var message = '确定不通过,驳回请求吗？';
	} else {
		layer.msg('参数错误',{icon:10,time:2000});
	}

	layer.confirm(message,function(index){
		//此处请求后台程序，下方是成功后的前台处理……	
		$.post(HHOME+'/Merchant/dealyaudit',{checked:checked,ucode:ucode}, function(obj) {
			var result = eval(obj);		
	        if (result['code'] != 0) {
	        	layer.msg(result['msg'],{icon:10,time:2000});
	        	setTimeout(function () {
		        		window.location.reload();
		        	},2000);
	        } else {
	        	layer.msg(result['msg'],{icon:1,time:2000});
	        	setTimeout(function () {
		        		window.location.reload();
		        	},2000); 
	        }          
	    });		
	});
}
</script> 
