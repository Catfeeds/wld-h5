<script type="text/javascript">
	window.onload = function() {
		$('.xm-bar-nav-right').hide();
		$('.xiaomi-bar').css('background', 'none');
		$('.mui-content').css('margin-top', '0px');
		yangshi();
	}

	//页面加载完js改变样式
	function yangshi() {
		$('.redshare-main').height($('.redshare-main').width()*1.78);
		$('.rshare-head').width($('.rshare-head').width());
		$('.rshare-head').height($('.rshare-head').width());
		$('.rshare-head').css('border-radius',$('.rshare-head').width()+'px');
		$('.rshare-redimg').height($('.rshare-redimg').width()*1.30);
	}
	
	$(window).bind('scroll', function() {
		if($(window).scrollTop() >= $('.xiaomi-bar').height()) {
			$('.xiaomi-bar').css('background', '#47ABF7');
		}
		if($(window).scrollTop() < $('.xiaomi-bar').height()) {
			$('.xiaomi-bar').css('background', 'none');
		}				
	});


</script>

