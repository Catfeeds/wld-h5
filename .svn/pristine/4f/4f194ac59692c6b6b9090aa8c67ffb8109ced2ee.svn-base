
.wrap-page{padding-bottom: 12%;}
img{width: 100%;height: auto;}

input::-webkit-input-placeholder, textarea::-webkit-input-placeholder {
color: #ccc;
}
input:-moz-placeholder, textarea:-moz-placeholder {
color: #ccc;
}
input::-moz-placeholder, textarea::-moz-placeholder {
color: #ccc;
}
input:-ms-input-placeholder, textarea:-ms-input-placeholder {
color: #ccc;
}


.add-pro-car{border: none;background: #47abf7;border-radius: 25px;color: #fff;text-align: center;padding: 1% 2%;}

.s-pro-buynum{float: right;overflow: hidden;}
.buynum-sub{ border: none; width: 9%;cursor:pointer; outline: none;}
.buyinput-txt{width: 16%;margin:0 2%;}
.buyinput-txt input[type="text"]{border: none;background: #fff;width: 98%;text-align: center;}
.buynum-add{ border: none; width: 9%;cursor:pointer; outline: none;}

.s-pro-buybtn{ background: #fff; border-top: solid 1px #d9d9d9; position: fixed;max-width: 720px;min-width: 320px;margin: 0 auto;left: 0;right: 0;padding: 2% 0;bottom: 0;}
.s-pro-button{ margin:0 auto;background: url(../../img/entity/qd-btn-0.png) no-repeat; background-size: 100% 100%;width: 92%;overflow: hidden;text-align: center;padding: 1.5% 0;outline: none;}
.s-gray-btn{background: url(../../img/entity/qd-btn-1.png) no-repeat; background-size: 100% 100%;}
.s-pro-buycar{width: 10%;margin-left: 35%;position: relative;}
.s-pro-buycar a{display: block;width: 100%;height: 100%;}
.s-pro-buyfont{ border:none; background: none; color: #fff;margin-left: 2%;width: 50%;text-align: left;}
.buy-ico-num{background: #fe0200; border-radius: 50%; color: #fff;font-size: 12px;overflow: hidden;position: absolute; padding: 0 12%; right: -10%;top: 0;text-align: center;}

.pro-r-state{width: 100%;overflow: hidden;}
.pro-r-state .state-box{overflow: hidden;padding: 1% 0;}
.pro-r-state .state-box section{border:none;float: left;text-align:center;border-radius: 5px;padding: 0 1.5%;margin-right: 2%;}
.pro-r-state .state-box section.blue-btn{border:solid 1px #46abfb;color: #46abfb;}
.pro-r-state .state-box section.yellow-btn{border:solid 1px #ffd66c;color: #ffd66c;}



#pro-list-0 input[type="checkbox"]{ cursor:pointer; width: 18px;height: 18px;border: 0px;-webkit-appearance: none;-webkit-mask-repeat: none;-webkit-mask-position: right;background: url("../../img/shop/delivery-link.png");background-size: 100% 100%; outline:none;}
#pro-list-0 input[type="checkbox"]:checked {width: 18px;height: 18px;border: 0px;background:url("../../img/shop/delivery-hover.png");background-size: 100% 100%;}
@media (min-width: 421px){
    #pro-list-0 input[type="checkbox"]{width: 22px;height: 22px;background-size: 100% 100%;}
    #pro-list-0 input[type="checkbox"]:checked {width: 22px;height: 22px;background-size: 100% 100%;}
}
