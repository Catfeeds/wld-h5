@charset "utf-8";
/* CSS Document */
/*登录页面*/
img{width: 100%;height: 100%;}
input[type="text"],input[type="password"]{border:none;background: #fff;width: 100%;margin: 0;padding: 0 3% 0 5%;border-radius: 0;height: auto;}
.login-header{padding: 14% 0;}
.header-img{width: 25%;height: auto;margin: 0 auto;overflow: hidden;}
.login-main{padding: 0 8% 6% 8%;}
.login-info{padding: 4.5% 0;}
.login-ico{width: 8%;}
.login-input{width: 92%;}
.userpwd{width: 84%;clear: none;}
.userpwd input[type="password"]{}
.login-eye{width: 8%;margin-top: 1%;}
.login-forgetpwd{text-align: right;margin-bottom: 8%;}
.login-button{width: 70%;margin: 0 auto;background: url(../img/signin_btn_bg.png) no-repeat center; background-size:100% 100%;color: #fff;padding: 3% 0 7% 0;letter-spacing: 2px;text-align: center;}
/*.login-button button{background: url(../img/signin_btn_bg.png) no-repeat center; background-size:100% 90%;color: #fff;border: none;width: 100%;border-radius: 0;padding: 6.5% 0 10% 0;letter-spacing: 2px;}*/
.login-btn-font{text-align: center;padding: 3% 0;}
.login-register{text-align: center;padding: 8% 0;}


/*会员注册*/
.mui-content{background: #fff;margin-top: 3%;}
.register-info{border-bottom: solid 1px #e9e9e9;padding: 4% 0;}
.register-info input[type="text"]{padding:1% 2%;}
.register-verify{width: 64%;}
.verify-btn{width: 35%;border-left:solid 1px #ccc;}
.verify-btn button{border: none;width: 100%;}
.register-deal{margin-top: 3%;}
.register-deal input[type="checkbox"]:before{font-size: 24px;color: #999;}
.register-button{margin-top: 10%;}
.register-button button{padding: 4% 0;border: none;}
#finish_sub{background: #46aafa;}


.send-code-next{background: #ccc;cursor: pointer; color: #fff;border-radius: 5px;margin: 5%;width: 90%;text-align: center;padding: 3% 0;}
.next-hover{background: #46aafa;}


/*协议页面*/

.pright{
	width: 100%;
	overflow: hidden;
	padding-bottom: 50px;	
}


.pr-title{
	padding:2% 0px;
	width:100%;	
	font-size: 20px;
	overflow:hidden;
}
h3{
	width:100%;
	height:22px;
	line-height:22px;
	overflow:hidden;
	display:block;
	font-size:16px;
	padding-top:1px;
	text-indent:10px;	
	letter-spacing:2px;
	color:#46aafa;
	font-weight:bold;
	text-align: center;
}
.fc-690{
	color:#690;
	font-size:14px;
}
.pr-agreement{
	padding:10px;
	color:#666;
	font-size: 14px;	
	overflow-y:scroll;
}
.pr-agreement p{
	text-indent: 2em;
	word-spacing: 2em;
}
h5{font-size: 16px;}
.btn-box{
	position: fixed;
	bottom: 0px;
	width:100%;
}
.btn-box a{
	margin-left: 40%;
	width: 150px;
	height: 35px;
	line-height: 35px;
	background-color:#46aafa;
	float: left;
	margin-left:10px;
	font-size: 16px;
	font-family: '微软雅黑';
	text-align: center;
	letter-spacing: 1px;
	border-radius: 5px;
	text-decoration: none;
	border: 1px solid #46aafa;
	color:#fff;
}



@media (min-width: 421px) and (max-width: 520px) {
	.register-deal input[type="checkbox"]:before{font-size: 30px;}
}

@media  (min-width: 521px) and (max-width: 620px) {
	.register-deal input[type="checkbox"]:before{font-size: 34px;}
}

@media (min-width: 621px){	
	.register-deal input[type="checkbox"]:before{font-size: 38px;}
}

