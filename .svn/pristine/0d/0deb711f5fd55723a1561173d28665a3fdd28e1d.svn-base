
.about-logo{margin:9% 0;overflow: hidden;text-align: center;padding-top: 5%;}
.about-logo-xm{width: 28%;margin: 0 auto;}
.about-logo-xm img{width: 100%;height: 100%;}
.about-logo-xmfont{color: #46aafa;font-size: 16px;padding: 1% 0;}
.about-logo-num{color: #999;font-size: 14px;}

.setting-list{overflow: hidden;width: 100%; background: #fff;}
.setting-list li{border-bottom: solid 1px #f5f5f5;width: 100%;padding: 2% 0;overflow: hidden;}
.setting-list li a{display: block;width: 100%;}
.setting-list-txt{float: left;color: #555;font-size: 14px;padding-left: 3%;}
.setting-list-arr{float: right;width: 10%;}
.versions-num{color: #999;float: right;font-size: 12px;}

.about-xiaomi{color: #555;font-size: 14px;line-height: 1.75em;padding: 4%;}

.sm-search{padding:4% 5%;}
.sm-search-con{ background: #fff; width: 100%;overflow: hidden;border-radius:8px;}
.sm-search-ico{float: left;width: 11%;}
.sm-search-txt{float: left;width: 63%;margin-right: 2%;}
.sm-search-txt input[type="text"]{border: none;background: #fff;outline: none;width: 100%;text-align: left;padding-left: 2%;color: #999;font-size: 14px;}
.sm-search-btn{width: 24%;float: right;overflow: hidden;}
#btnsearch{border:none;background: #cccccc;cursor:pointer; outline: none;width: 100%;text-align: center;color: #fff;font-size: 14px;}
#btnsearch:hover{background:#47abf7;}
.help-feedback{background: #fff; display: block;position: fixed;bottom: 0;z-index: 9999;color: #46aafa;font-size: 16px;text-align: center;padding: 3% 0;border-top: solid 1px #ccc;width: 100%;max-width: 720px;min-width: 320px;}


.help-detail-tit{color: #000;font-size: 16px;padding: 3%;border-bottom: solid 1px #ccc;font-weight: 600;}
.help-detail-con{color: #555;font-size: 14px;padding: 3%;}

.productmodular{
    background-color: #fff;
}
.productmodular-top{
    padding: 3% 0;
    color: #b8b8b8;
    font-size: 14px;
    margin:0 4%;
}

.producttitle{
    width: 30%;
    font-size: 16px;
    color: #555;
}

.productmodular-bottom{
    margin: 0 0 4% 4%;
    overflow: hidden;
}
