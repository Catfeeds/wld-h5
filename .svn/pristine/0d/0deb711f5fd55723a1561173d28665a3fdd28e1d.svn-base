.productmodular-img{position: relative;float:left;width: 30%;margin-right: 3%;margin-top:3%;}
.productmodular-position{position: absolute;width: 21%;top:-5%;right:-5%;overflow: hidden;z-index:11;}
.productmodular-img input[type="file"]{ position: absolute;left: 0;top: 0;bottom: 0; right: 0; z-index: 10;opacity: 0; filter:alpha(opacity=0);}
.productmodular-img img,.productmodular-position img,.productmodular-position img{width: 100%;height: 100%;}

.upload-text{width: 100%;padding:3%;overflow: hidden;color:#999;}
.upload-submit{border:0px;width: 30%;padding:2% 0px;text-align: center;
    color:#fff;background:#ffad3f;border-radius: 3px;margin-top: 8%;margin-left: 35%;}



.resource-sub{cursor: pointer; border-radius: 5px; width: 80%;margin: 6% auto;color: #fff;font-size: 16px;text-align: center;padding: 3% 0;}
.sub-blue{background: #47abf7;}
.sub-gray{background: #ccc;}

.feedback-text{border-bottom: solid 1px #ebebeb;padding:4%;}
#feedback-txt{color: #999;font-size: 14px;padding: 2%;border: none;width: 100%;height: 100%;}


/*我的小助手*/
.helper-banner{background: #46a9fa;padding: 6% 4%;}
.swiper-slide{text-align: center;}
.swiper-slide a{display: block;width: 35%;margin: 0 auto;position: relative;}
/*.swiper-slide a img{width: 100%; height: 100%;}*/
.messagenum{background: #ff3b2f; border-radius: 100%; color: #fff;font-size: 12px;padding: 1% 2%;text-align: center;position: absolute;right: 8%;top: 5%;}


.helper-ser{background: #fff;border-radius: 5px;width: 100%;margin: 0 auto;overflow: hidden;text-align: center;}
.ser-img-ico{width: 11%;margin-left: 25%;}



.myinfo-exit{padding: 6% 4%;overflow: hidden;}
.myinfo-exit-btn{background: #46aafa; border-radius: 5px; color: #fff; display: block;text-align: center;padding: 3% 0;width: 100%;margin: 0 auto;}


/*响应代码*/
@media (min-width: 421px) and (max-width: 520px) {
    .about-logo-num,.about-xiaomi,.sm-search-txt input[type="text"],#btnsearch,.help-detail-con,#feedback-txt{font-size: 18px;}
    .about-logo-xmfont,.setting-list-txt,.help-feedback,.help-detail-tit,.producttitle,.resource-sub{font-size: 20px;}
    .versions-num{font-size: 14px;}
}

@media  (min-width: 521px) and (max-width: 620px) {
    .about-logo-num,.about-xiaomi,.sm-search-txt input[type="text"],#btnsearch,.help-detail-con,#feedback-txt{font-size: 22px;}
    .about-logo-xmfont,.setting-list-txt,.help-feedback,.help-detail-tit,.producttitle,.resource-sub{font-size: 24px;}
    .versions-num{font-size: 16px;}
    .messagenum{font-size: 14px;}

}   

@media (min-width: 621px){
    .about-logo-num,.about-xiaomi,.sm-search-txt input[type="text"],#btnsearch,.help-detail-con,#feedback-txt{font-size: 26px;}
    .about-logo-xmfont,.setting-list-txt,.help-feedback,.help-detail-tit,.producttitle,.resource-sub{font-size: 28px;}
    .versions-num{font-size: 18px;}
    .messagenum{font-size: 14px;right: 20%;top: 5%;}
}

