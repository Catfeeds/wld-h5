<title>新增产品</title>
</head>
<body>
<div class="pd-20">
	<form action="{$action}" method="post" class="form form-horizontal" id="form-product-add">
		<div class="row cl">
			<label class="form-label col-2"><span class="c-red">*</span>产品标题：</label>
			<div class="formControls col-10">
				<input type="text" class="input-text" value="{$data['c_name']}" placeholder="" id="" name="c_name">
			</div>
		</div>
		<div class="row cl">
			<label class="form-label col-2"><span class="c-red">*</span>产品分类：</label>
			<div class="formControls col-2"> <span class="select-box">
				<select class="select" size="1" name="c_categoryid">
          		<option value="" selected>请选择产品分类</option>
				<volist name="category" id="vo">
					<option value="{$vo['c_id']}" <if condition="$data['c_categoryid'] eq $vo['c_id']">selected="selected"</if>>{$vo['c_category_name']}</option>
				</volist>
        		</select>
        	</span>
			</div>
			<label class="form-label col-2"><span class="c-red">*</span>所属商家：</label>
			<div class="formControls col-2"> <span class="select-box">
				<select name="ucode" class="select" onClick="selectucode('请选择用户','Member/member_list?hide=1&shop=1',1000);" id="typecheck">
					<if condition="$data['c_ucode'] neq null">
					<option value="{$data.c_ucode}">{$data.c_nickname}</option></if>
					<option value="{$vo.c_ucode}">{$vo.c_nickname}</option>
				</select>
        	</span>
			</div>
		</div>
		<div class="row cl">
			<label class="form-label col-2"><span class="c-red">*</span>产品价格：</label>
			<div class="formControls col-8">
				<input type="text" name="c_price" id="" placeholder="产品价格用于前端显示" value="{$data['c_price']}" class="input-text" style=" width:25%">元&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
				<span class="c-red">*</span>产品数量：
				<input type="text" name="c_num" id="" placeholder="产品数量用于前端显示" value="{$data['c_num']}" class="input-text" style=" width:25%">
			</div>
		</div>
		<div class="row cl">
			<label class="form-label col-2"><span class="c-red">*</span>商家是否推荐：</label>
			<div class="formControls col-2"> <span class="select-box">
				<select class="select" size="1" name="c_isshoptuijian">
          		<option value="0" <if condition="$data['c_isshoptuijian'] eq 0">selected="selected"</if>>不推荐</option>
				<option value="1" <if condition="$data['c_isshoptuijian'] eq 1">selected="selected"</if>>推荐</option>
        		</select>
        	</span>
			</div>
			<label class="form-label col-2">产品销量：</label>
			<div class="formControls col-6">
				<input type="text" name="c_salesnum" id="" placeholder="" value="{$data['c_salesnum']}" class="input-text" style=" width:25%">
			</div>
		</div>
		
		<div class="row cl">
			<label class="form-label col-2"><span class="c-red">*</span>是否包邮：</label>
			<div class="formControls col-2"> <span class="select-box">
				<select class="select" size="1" name="c_isfree">
          		<option value="1" <if condition="$data['c_isfree'] eq 1">selected="selected"</if>>包邮</option>
				<option value="2" <if condition="$data['c_isfree'] eq 2">selected="selected"</if>>不包邮</option>
        		</select>
        	</span>
			</div>
			<label class="form-label col-2">邮费价格：</label>
			<div class="formControls col-2">
				<input type="text" class="input-text" value="{$data['c_freeprice']}" placeholder="包邮时不填" id="" name="c_freeprice">
			</div>
		</div>
		<div class="row cl">
			<label class="form-label col-2"><span class="c-red">*</span>是否返利：</label>
			<div class="formControls col-2"> <span class="select-box">
				<select name="c_isrebate" class="select">
					<option value="0" <if condition="$data['c_isrebate'] eq 0">selected="selected"</if>>否</option>
					<option value="1" <if condition="$data['c_isrebate'] eq 1">selected="selected"</if>>是</option>
				</select>
				</span> </div>
			<label class="form-label col-2">返利比例：</label>
			<div class="formControls col-2">
				<input type="text" class="input-text" value="{$data['c_rebate_proportion']}" placeholder="不返利时不填" id="" name="c_rebate_proportion">
			</div>
		</div>
		<div class="row cl">
			<label class="form-label col-2"><span class="c-red">*</span>是否推广：</label>
			<div class="formControls col-2"> <span class="select-box">
				<select name="c_isspread" class="select">
					<option value="0" <if condition="$data['c_isspread'] eq 0">selected="selected"</if>>不推广</option>
					<option value="1" <if condition="$data['c_isspread'] eq 1">selected="selected"</if>>推广</option>
				</select>
				</span> </div>
			<label class="form-label col-2">推广百分比：</label>
			<div class="formControls col-2">
				<input type="text" class="input-text" value="{$data['c_spread_proportion']}" placeholder="不推广时不填" id="" name="c_spread_proportion">
			</div>
		</div>
		<!-- <div class="row cl">
			<label class="form-label col-2"><span class="c-red">*</span>代理类型：</label>
			<div class="formControls col-2"> <span class="select-box">
				<select class="select" size="1" name="c_categoryid">
	          		<option value="" selected>请选择产品分类</option>
					<option value="0">商家代理</option>
					<option value="1">平台代理</option>
        		</select>
        	</span>
			</div>
			<label class="form-label col-2"><span class="c-red">*</span>代理产品编码：</label>
			<div class="formControls col-2"> <span class="select-box">
				<select name="ucode" class="select" onClick="selectucode('请选择用户','Member/member_list?hide=1&shop=1',1000);" id="typecheck">
					<option value="{$vo.c_ucode}">{$vo.c_nickname}</option>
				</select>
        	</span>
			</div>
		</div> -->
		<div class="row cl">
			<label class="form-label col-2"><span class="c-red">*</span>商品详情：</label>
			<div class="formControls col-10">
				<textarea name="c_desc" cols="" rows="" class="textarea"  placeholder="商品详情介绍" datatype="*10-100" dragonfly="true" nullmsg="备注不能为空！" onKeyUp="textarealength(this,300)">{$data['c_desc']}</textarea>
				<p class="textarea-numberbar"><em class="textarea-length">0</em>/300</p>
			</div>			
		</div>
		
		<div class="row cl">
			<div class="col-10 col-offset-2">
				<input type="hidden" name="c_id" value="{$data['c_id']}" />
				<div onClick="product_save_submit();" class="btn btn-primary radius" type="submit"><i class="Hui-iconfont">&#xe632;</i> 添加并提交审核</div>
				<div onClick="layer_close();" class="btn btn-default radius" type="button">&nbsp;&nbsp;取消&nbsp;&nbsp;</div>
			</div>
		</div>
	</form>
</div>
</div>
<script type="text/javascript" src="__HLIB__/jquery/1.9.1/jquery.min.js"></script> 
<script type="text/javascript" src="__HLIB__/layer/1.9.3/layer.js"></script> 
<script type="text/javascript" src="__HLIB__/My97DatePicker/WdatePicker.js"></script> 
<script type="text/javascript" src="__HLIB__/icheck/jquery.icheck.min.js"></script> 
<script type="text/javascript" src="__HLIB__/Validform/5.3.2/Validform.min.js"></script> 
<script type="text/javascript" src="__HLIB__/webuploader/0.1.5/webuploader.min.js"></script> 
<script type="text/javascript" src="__HJS__/H-ui.js"></script> 
<script type="text/javascript" src="__HJS__/H-ui.admin.js"></script> 
<script type="text/javascript">
//选择商家
function selectucode(title,url,w,h) {
	layer_show(title,url,w,h);
	$('.ctrl_hidden').hide();
}
// 保存并提交
function product_save_submit() {
	var product_name = $('input[name=c_name]').val();
	var category = $('select[name=c_categoryid]').val();
	var ucode = $('select[name=ucode]').val();
	var price = $('input[name=c_price]').val();
	var num = $('input[name=c_num]').val();
	var isrebate = $('select[name=c_isrebate]').val();
	var isspread = $('select[name=c_isspread]').val();
	var isfree = $('select[name=c_isfree]').val();
	var desc = $('textarea[name=c_desc]').val();

	if(product_name == ''){
		layer.msg('产品名字未填写',{icon:10,time:2000});
		return;
	}
	if (category == '') {
		layer.msg('产品分类未选择',{icon:10,time:2000});
		return;
	}
	if (ucode == '') {
		layer.msg('所属商家未选择',{icon:10,time:2000});
		return;
	}
	if (price == '') {
		layer.msg('产品价格未填写',{icon:10,time:2000});
		return;
	}
	if (num == '') {
		layer.msg('产品数量未填写',{icon:10,time:2000});
		return;
	}
	if (isfree == 2) {
		var c_freeprice = $('input[name=c_freeprice]').val();
		if(c_freeprice == ''){
			layer.msg('不包邮时必须填写邮费价格',{icon:10,time:2000});
			return;
		} 
	}
	if (isrebate == 1) {
		var rebate_proportion = $('input[name=c_rebate_proportion]').val();
		if(rebate_proportion == ''){
			layer.msg('返利时必须填写返利比例',{icon:10,time:2000});
			return;
		} 
	}
	if (isspread == 1) {
		var spread_proportion = $('input[name=c_spread_proportion]').val();
		if(spread_proportion == ''){
			layer.msg('推广时必须填写推广百分比',{icon:10,time:2000});
			return;	
		}
	}
	if(desc == ''){
		layer.msg('产品详情未填写',{icon:10,time:2000});
		return;
	}
	$('#form-product-add').submit();
}
</script>
</body>
</html>