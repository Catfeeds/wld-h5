<!DOCTYPE HTML>
<html>
<head>
<meta charset="utf-8">
<meta name="renderer" content="webkit|ie-comp|ie-stand">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
<meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1.0,maximum-scale=1.0,member-scalable=no" />
<meta http-equiv="Cache-Control" content="no-siteapp" />
<script type="text/javascript">var SKIN = "__HSKIN__";var HHOME = "__HHOME__";</script>
<!--[if lt IE 9]>
<script type="text/javascript" src="__HLIB__/html5.js"></script>
<script type="text/javascript" src="__HLIB__/respond.min.js"></script>
<script type="text/javascript" src="__HLIB__/PIE_IE678.js"></script>
<![endif]-->
<link href="__HCSS__/H-ui.min.css" rel="stylesheet" type="text/css" />
<link href="__HCSS__/H-ui.admin.css" rel="stylesheet" type="text/css" />
<link href="__HLIB__/icheck/icheck.css" rel="stylesheet" type="text/css" />
<link href="__HLIB__/Hui-iconfont/1.0.1/iconfont.css" rel="stylesheet" type="text/css" />
<!--[if IE 6]>
<script type="text/javascript" src="http://lib.h-ui.net/DD_belatedPNG_0.0.8a-min.js" ></script>
<script>DD_belatedPNG.fix('*');</script>
<![endif]-->
<title>添加活动奖金池</title>
</head>
<body>
<div class="pd-20">
	<form action="{$action}" method="post" class="form form-horizontal" enctype="multipart/form-data">
		<div id="tab-category" class="HuiTab">
			<div class="tabCon">		
			<div class="row cl">
				<label class="form-label col-3"><span class="c-red">*</span>奖池总额：</label>
				<div class="formControls col-6">
					<input type="text" class="input-text" value="{$vo.c_money}" placeholder="" id="" name="money" placeholder="">
				</div>
				<div class="col-3"> </div>
			</div>
			<div class="row cl">
		      <label class="form-label col-3"><span class="c-red">*</span>剩余总额：</label>
		      <div class="formControls col-6">
		       <input type="text" class="input-text" value="{$vo.c_remain}" placeholder="" id="" name="remain">
		      </div>
		      <div class="col-4"> </div>
		    </div>
		     <div class="row cl">
		      <label class="form-label col-3"><span class="c-red">*</span>展示图片：</label>
		      <div class="formControls col-6">
		      	<input type="file" name="imgpath">
		      </div>
		      <div class="col-4"> </div>
		    </div>
		   <div class="row cl">
		      <label class="form-label col-3">送出最小金额：</label>
		      <div class="formControls col-6">
		       <input type="text" class="input-text" value="{$vo.c_min_money}" id="" name="min_money" placeholder="随机金额时必须填写">
		      </div>
		      <div class="col-4"> </div>
		    </div>
		    <div class="row cl">
		      <label class="form-label col-3">送出最大金额：</label>
		      <div class="formControls col-6">
		       <input type="text" class="input-text" value="{$vo.c_max_money}" id="" name="max_money" placeholder="随机金额时必须填写">
		      </div>
		      <div class="col-4"> </div>
		    </div>
			<div class="row cl">
				<label class="form-label col-3"><span class="c-red">*</span>规则类型：</label>
				<div class="formControls col-6">
					<span class="select-box">
						<select class="select" id="sel_Sub" name="rule">
							<option value="">--请选择--</option>
							<option value="1" <if condition="$vo.c_rule eq 1">selected="selected"</if>>按活动金额表</option>
							<option value="2" <if condition="$vo.c_rule eq 2">selected="selected"</if>>按活动奖品表</option>
						</select>
					</span>
				</div>
				<div class="col-3"> </div>
			</div>
			<div class="row cl">
				<label class="form-label col-3"><span class="c-red">*</span>发放状态：</label>
				<div class="formControls col-6">
					<span class="select-box">
						<select class="select" id="sel_Sub" name="state">
							<option value="">--请选择--</option>
							<option value="1" <if condition="$vo.c_state eq 1">selected="selected"</if>>发放</option>
							<option value="2" <if condition="$vo.c_state eq 2">selected="selected"</if>>不发放</option>
						</select>
					</span>
				</div>
				<div class="col-3"> </div>
			</div>
			<if condition="$activitytype eq 15" >
			    <div class="row cl">
					<label class="form-label col-3"><span class="c-red">*</span>发放开始时间：</label>
					<div class="formControls col-6">
						<input type="text" id="starttime" name="starttime" value="{$vo.c_starttime}" placeholder="发放开始时间" onClick="laydate({istime: true, format: 'YYYY-MM-DD hh:mm:ss'})" class="laydate-icon"/>
					</div>
					<div class="col-3"> </div>
				</div>			
				<div class="row cl">
					<label class="form-label col-3"><span class="c-red">*</span>发放结束时间：</label>
					<div class="formControls col-6">
						<input type="text" id="endtime" name="endtime" value="{$vo.c_endtime}" placeholder="发放结束时间" onClick="laydate({istime: true, format: 'YYYY-MM-DD hh:mm:ss'})" class="laydate-icon"/>
					</div>
					<div class="col-3"> </div>
				</div>
			</if>									
		<div class="row cl">
			<div class="col-9 col-offset-3">
				<input type="hidden" name="Id" value="{$vo.c_id}">
				<input type="hidden" name="aid" value="{$aid}">
				<input type="submit" value="提交" class="btn btn-primary radius">
			</div>
		</div>
	</form>
</div>
</div>
<script type="text/javascript" src="__HLIB__/jquery/1.9.1/jquery.min.js"></script> 
<script type="text/javascript" src="__HLIB__/icheck/jquery.icheck.min.js"></script> 
<script type="text/javascript" src="__HLIB__/Validform/5.3.2/Validform.min.js"></script> 
<script type="text/javascript" src="__HLIB__/layer/1.9.3/layer.js"></script> 
<script type="text/javascript" src="__HJS__/H-ui.js"></script> 
<script type="text/javascript" src="__HJS__/H-ui.admin.js"></script>
<script type="text/javascript" src="__HJS__/laydate.js"></script> 
<script type="text/javascript">
$(function(){
	$('.skin-minimal input').iCheck({
		checkboxClass: 'icheckbox-blue',
		radioClass: 'iradio-blue',
		increaseArea: '20%'
	});
	
	$("#form-category-add").Validform({
		tiptype:2,
		callback:function(form){
			form[0].submit();
			var index = parent.layer.getFrameIndex(window.name);
			parent.$('.btn-refresh').click();
			parent.layer.close(index);
		}
	});
	$.Huitab("#tab-category .tabBar span","#tab-category .tabCon","current","click","0");
});
</script>
</body>
</html>