@charset "utf-8";
/* CSS Document */
img{width: 100%;height: 100%;}

/*会员管理*/
.member-top{width: 100%;}
.member-incode-bg{width: 100%;position: relative;z-index: 90;}
.member-incode,.member-font{color: #fff;position: absolute;text-align: center;width: 100%;}
.member-incode{font-weight: bold;top: 20%;}
.member-font{top: 42%;}
.member-invite{background: url(../img/member/hy3.png) no-repeat; background-size: 100% 100%; display: block; color: #48acf8; width: 52%;margin-top: -7.5%;position: relative;z-index: 99;left: 23%;text-align: center;padding:4% 10% 7% 10%;vertical-align: top;}
.member-invite:visited { background: url(../img/member/hy2.png) no-repeat; background-size: 100% 100%;color: #fff;}
.member-invite:hover{ background: url(../img/member/hy2.png) no-repeat; background-size: 100% 100%;color: #fff;}
.member-invite:active{ background: url(../img/member/hy2.png) no-repeat; background-size: 100% 100%;color: #fff;}

.member-tabli{width: 100%;overflow: hidden;margin-top: 3%;}
.member-tabli ul li{border-bottom: solid 2px #f2f2f2;float: left;width: 50%;color: #999;padding: 3% 0;text-align: center;}
.member-tabli ul li.hover{color: #46abfb;border-bottom: solid 2px #46abfb;}

.member-view{width: 100%;overflow: hidden;}
.member-box{width: 100%;overflow: hidden;position: relative;}
.member-box-l{width: 18%;float: left;position: relative;padding-top: 3%;margin-left: 3%;}
.member-box-r{width: 76%;float: right;border-bottom: solid 1px #ebebeb;padding:4% 0 2% 0;margin-left: 3%;}
.member-name{width: 100%;text-overflow: ellipsis;-o-text-overflow: ellipsis;overflow: hidden;white-space: nowrap;}
.member-area-tag{width: 100%;overflow: hidden;}
.member-job,.member-area{color: #999;}
.member-job{padding:1% 0px;float: left;width: 43%;overflow: hidden; text-overflow: ellipsis; white-space: nowrap;margin-right: 2%;}
.member-area{padding:1% 0px;float: right;overflow: hidden; text-overflow: ellipsis; white-space: nowrap;width: 55%;}
.member-desc{width: 100%;overflow: hidden; text-overflow: ellipsis; white-space: nowrap;}
.member-box-head{width: 100%;float: left;overflow: hidden;}
.member-box-head img{width: 100%;height: 100%;}
.member-box-sj{position: absolute;right: -4%;bottom: -5%;z-index: 666;width:40%;height: 40%;}
.member-state{position: absolute;right: 1%;bottom: 30%;width: 50%;}
.member-state ul li{float: right;width: 15%;margin-right: 3%;}

.bluec{color: #46abfb;}
.member-weixin{width: 100%;overflow: hidden;border-bottom: solid 1px #ebebeb;padding: 3%;}
.member-wx-desc{}
.member-wx-desc span{margin-right: 2%;}
.member-wx-time{padding-top: 1%;}

.prompt-box-bg{display:none; background-color: black; z-index:998;  -moz-opacity: 0.7;  opacity:.70;  filter: alpha(opacity=70);width: 100%;position: absolute;  top: 0%;  left: 0%;}
.prompt-box{ display: none; position: fixed;left: 0;right: 0;width: 65%;margin: 0 auto;top: 15%;z-index: 999;}
.prompt-box-con{background: #fff;border-radius: 8px;}
.tooltip-font{padding: 4%;border-bottom: solid 1px #ebebeb; }
.tooltip-font span{margin-right: 2%;}
.tooltip-btn{ display: block; text-align: center;padding: 4%;}


/*商家会员~微信授权*/
.sj-member{background: #47abf7;padding: 18% 0;}
.sj-member-con{margin-top: -26%;margin-left: 3%;margin-right: 3%;}
.join-type{top: 12%;left: 12%;}
.join-time{top: 25%;left: 12%;}
.join-member-info{border-top: solid 1px #ebebeb;overflow: hidden;top: 40%;left: 5.5%;right: 5.5%;margin: 0 auto;padding-top: 4%;}
.j-member-head{width: 18%;overflow: hidden;margin-left: 4%;}
.j-member-info{width: 63%;margin-left: 3%;}
.j-member-name{}
.j-member-gz{}
.j-member-gz span{margin-right: 3%;}
.j-member-arrow{width: 10%;margin-top: 4%;margin-right: 2%;}
.sj-member-tip{padding: 4% 8%;}
.sj-member-tip span{margin:0 3%;}
.sj-member-btn{width: 55%;margin: 0 auto;}
.sj-member-btn a{display: block;background: url(../img/member/index3.png) no-repeat; background-size: 100% 100%;color: #fff;text-align: center;padding: 10% 10% 16% 8%;width: 100%;}
.sj-member-btn a:hover{background: url(../img/member/index2.png) no-repeat;background-size: 100% 100%;}
.sj-wx-tip{top: 19%;left: 12%;right: 12%;}
.sj-wx-tip h3{text-align: center;padding-bottom: 4%;}

/*2017-03-14会员管理*/
.member_left{width: 10%;overflow: hidden;padding-top: 3%;}
.member_right{width: 88%;overflow: hidden;margin-left: 2%;}


